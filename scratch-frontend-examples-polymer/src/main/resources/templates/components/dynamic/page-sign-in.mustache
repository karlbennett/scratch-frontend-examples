<link rel="import" href="/webjars/polymer/1.8.0/polymer.html">

<dom-module id="page-sign-in">
    <template>
        <div class="signin">
            {{#username}}
                <a href="/profile">{{username}}</a>
                <a href="/signOut">Sign Out</a>
            {{/username}}
            {{^username}}
                <a href="/registration.html">Register</a>
                <a href="/sign-in.html">Sign In</a>
            {{/username}}
        </div>
    </template>

    <script>
        Polymer({
            is: "page-sign-in"
        });
    </script>
</dom-module>